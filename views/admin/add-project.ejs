<div class="admin_wrapper">
    <div class="left-sidebar">
        <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/posts">Manage Causes</a></li>
            <li><a href="/faq">Manage Team</a></li>
            <li><a href="/latest-projects">Manage Testimonials</a></li>
        </ul>
    </div>
    <div class="admin-content">

        <div class="content">
            <h2 class="page-title">Add Testimonials</h2>

            <% if(messages.error){ %>
                <ul class="error">
                    <li><%= messages.error %></li>
                </ul>
            <% } %>
           
            <form action="/add-project" method="POST" enctype="multipart/form-data" class="add-post">

                <div>
                    <label for="name">Name</label>
                    <input type="text" name="name" class="text-input">
                </div>

                <div>
                    <label for="profession">Profession</label>
                    <textarea name="profession" id="body" cols="50" rows="5"></textarea>
                </div>

                <div>
                    <label for="testimonial">Testmonial</label>
                    <textarea name="testmonial" id="mytextarea" cols="50" rows="10"></textarea>
                </div>

                <div>
                    <label for="image">Image</label>
                    <input type="file" name="image" id="img-input" class="text-input">
                </div>
              
                <div>
                    <input type="submit" class="btn" value="Add">
                </div>
            </form>

        </div>
    </div>
</div>
