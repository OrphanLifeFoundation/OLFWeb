<div class="admin_wrapper">
    <div class="left-sidebar">
        <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/posts">Manage Causes</a></li>
            <li><a href="/faq">Manage Team</a></li>
            <li><a href="/latest-projects">Manage Testimonials</a></li>
            <li><a href="/my-services">Manage Counter</a></li>
        </ul>
    </div>
    <div class="admin-content">

        <div class="content">
            <h2 class="page-title">Manage Counter</h2>

            <% if(messages.success){ %>
                <ul class="success">
                    <li><%= messages.success %></li>
                </ul>
                <% } %>
           
            <table>
                <thead>
                    <th>Title</th>
                    <th colspan="2">Action</th>
                </thead>
                <tbody>
                    <% services.forEach(function(service, index) { %>
                        <tr>
                            <td><a href="/#facts">Counter</a></td>
                            <td><a href="/edit-service/<%= service._id %>" class="edit">Edit</a></td>
                        </tr>
                    <% }); %>
                </tbody>
                
            </table>
        </div>
    </div>
</div>
