
<div class="admin_wrapper">
    <div class="left-sidebar">
        <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/posts">Manage Causes</a></li>
            <li><a href="/faq">Manage Team</a></li>
            <li><a href="/latest-projects">Manage Testimonials</a></li>
        </ul>
    </div>
    <div class="admin-content">

        <div class="content">
            <h2 class="page-title">Edit Cause</h2>
            <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn">
            </form>

            <% if(messages.error){ %>
                <ul class="error">
                    <li><%= messages.error %></li>
                </ul>
            <% } %>
            
            <form action="/edit-post/<%= data._id %>?_method=PUT" enctype="multipart/form-data" method="POST" class="add-post">

                
                <div>
                    <label for="title">Title</label>
                    <input type="text" name="title" class="text-input" value="<%= data.title %>">
                </div>

                <div>
                    <label for="target">Target</label>
                    <input type="text" name="target" class="text-input" value="<%= data.target %>">
                </div>

                <div>
                    <label for="raised">Raised</label>
                    <input type="text" name="raised" class="text-input" value="<%= data.raised %>">
                </div>
                
                <div>
                    <label for="percentage">Percentage</label>
                    <input type="text" name="percentage" class="text-input" value="<%= data.percentage %>">
                </div>

                <div>
                    <label for="preview">Preview</label>
                    <textarea name="preview" id="body" cols="50" rows="5"><%= data.preview %></textarea>
                </div>

                <div>
                    <label for="body">Body</label>
                    <textarea name="body" id="" cols="50" rows="10"><%= data.body %></textarea>
                </div>

                <div>
                    <label for="image">Image</label>
                    <input type="file" name="image" id="img-input" class="text-input">
                </div>
              
                <div>
                    <input type="submit" class="btn" value="Update">
                </div>
            </form>

        </div>
    </div>
    
    <main></main>
</div>
