<div class="admin_wrapper">
    <div class="left-sidebar">
        <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/posts">Manage Causes</a></li>
            <li><a href="/faq">Manage Team</a></li>
            <li><a href="/latest-projects">Manage Testimonials</a></li>
            <li><a href="/my-services">Manage Counter</a></li>
        </ul>
    </div>
    <div class="admin-content">

        <div class="content">
            <h2 class="page-title">Add Counter Information</h2>

            <% if(messages.error){ %>
                <ul class="error">
                    <li><%= messages.error %></li>
                </ul>
            <% } %>
           
            <form action="/add-service" method="POST" enctype="multipart/form-data" class="add-post">

                <div>
                    <label for="districts">Districts</label>
                    <input type="text" name="districts" class="text-input">
                </div>

                <div>
                    <label for="volunteers">Volunteers</label>
                    <input type="text" name="volunteers" class="text-input">
                </div>

                <div>
                    <label for="goal">Goal</label>
                    <input type="text" name="goal" class="text-input">
                </div>

                <div>
                    <label for="raised">raised</label>
                    <input type="text" name="raised" class="text-input">
                </div>
              
                <div>
                    <input type="submit" class="btn" value="Add Counter Data">
                </div>
            </form>

        </div>
    </div>
</div>
