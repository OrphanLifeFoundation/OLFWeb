
<div class="admin_wrapper">
    <div class="left-sidebar">
        <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/posts">Manage Causes</a></li>
            <li><a href="/faq">Manage Team</a></li>
            <li><a href="/latest-projects">Manage Testimonials</a></li>
        </ul>
    </div>
    <div class="admin-content">
        <div class="button-group">
            <a href="/add-faq" class="btn">Add New Member</a>
            <a href="/faq" class="btn">Manage Team</a>
        </div>

        <div class="content">
            <h2 class="page-title">Add Team Member</h2>

            <% if(messages.error){ %>
                <ul class="error">
                    <li><%= messages.error %></li>
                </ul>
            <% } %>
            
            <form action="/add-faq" method="POST" enctype="multipart/form-data" class="add-post">

                <div >
                    <label for="qstn">Member's Name</label>
                    <input type="text" name="name" class="text-input">
                </div>

                <div >
                    <label for="Description">Position</label>
                    <textarea name="position" id="" cols="50" rows="10" class="text-input"></textarea>
                </div>

                <div >
                    <label for="image">Member's Photo</label>
                    <input type="file" name="image" id="">
                </div>

              
                <div>
                    <input type="submit" class="btn" value="Submit">
                </div>
            </form>

        </div>
    </div>
    
    <main></main>
</div>



