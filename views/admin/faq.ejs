<div class="admin_wrapper">
  <div class="left-sidebar">
    <ul>
      <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/posts">Manage Causes</a></li>
            <li><a href="/faq">Manage Team</a></li>
            <li><a href="/latest-projects">Manage Testimonials</a></li>
            <li><a href="/my-services">Manage Counter</a></li>
  </ul>
  </div>
  <div class="admin-content">
      <div class="button-group">
          <a href="/add-faq" class="btn admin-btn">Add New Team Member</a>
      </div>

      <div class="content">
          <div>
              <h2 class="page-title">Manage Team Members</h2>
          </div>

          <% if(messages.success){ %>
              <ul class="success">
                  <li><%= messages.success %></li>
              </ul>
          <% } %>
          
          <table>
              <thead>
                <th>SN</th>
                <th>Title</th>
                <th colspan="2">Action</th>
              </thead>
              <tbody>
                <% if (faqs.length === 0) { %>
                  <tr>
                    <td colspan="4">No Team Members available at the moment.</td>
                  </tr>
                <% } else { %>
                  <% faqs.forEach(function(faq, index) { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><a href="/faqs/<%= faq._id %>"><%= faq.name %></a></td>
                      <!-- <td><a href="/edit-faq/<%= faq._id %>" class="edit">Edit</a></td> -->
                      <td>
                        <form action="/delete-faq/<%= faq._id %>?_method=DELETE" method="post">
                          <button type="submit" class="delete">Delete</button>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                <% } %>
              </tbody>
            </table>
      </div>
  </div>
  
  <main></main>
</div>
