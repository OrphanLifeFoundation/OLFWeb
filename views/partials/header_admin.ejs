<div id="top"></div>
<header class="header-admin">
    
    <div class="nav">

        <div class="logo">
            <img src="/img/olf.png" width="50px" height="50px" alt="">
        </div>

        <div class="menu">
          <a id="toggleDark"><i class="bx bx-moon Theme-icon"></i></a>
        </div>
     
        <div class="auth-container">

            <% if (currentPage === 'login') { %>
                <div class=" ">
                    <a href="register">
                        <button class="logout_btn btn">
                            Sign Up
                        </button>
                    </a>
                </div>
            <% } else if (currentPage === 'register') { %>
                <div class=" ">
                    <a href="login">
                        <button class="logout_btn btn">
                            Sign In
                        </button>
                    </a>
                </div>
            <% } else if (currentPage === 'dashboard' || currentPage === 'add-post' || currentPage === 'add-project'|| currentPage === 'add-service'|| currentPage === 'create-user'|| currentPage === 'edit-post'|| currentPage === 'edit-project'|| currentPage === 'edit-service'|| currentPage === 'edit-user'|| currentPage === 'latest-projects'|| currentPage === 'my-services'|| currentPage === 'topics'|| currentPage === 'users') { %>
                <div class=" ">
                    <a href="/logout">
                        <button class="logout_btn btn">
                            Sign Out
                        </button>
                    </a>
                </div>
            <% } %>

        </div>

    </div>

</header>
